#include<API_debounce.h>

estadoMEF_t estadoActual;

void InicializarMEF(void){
	estadoActual = BUTTON_UP;
	BSP_PB_Init(BUTTON_USER, BUTTON_MODE_GPIO);


}


void ActualizarMEF(void){

	switch (estadoActual) {
			case BUTTON_UP: // Actualizar salida del estado
				if(BSP_PB_GetState(BUTTON_USER)){

						}
				// Chequear condiciones de transici칩n de estado
				if(condicionesDeTransici칩n == TRUE){
					// Cambiar a otro estado
					 estadoActual = ESTADO_N;
				}

			break;
			case ESTADO_1:
				...
			break;
			case ESTADO_N:
						...

					break;

					default:
						//Si algo modific칩 la variable estadoActual
						// a un estado no v치lido llevo la MEF a un
						// lugar seguro, por ejemplo, la reinicio:
						InicializarMEF();

					break;
				}
			}

}

